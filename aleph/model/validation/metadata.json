{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "metadata.json#",
    "type": "object",
    "properties": {
        "file_name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 2048
        },
        "foreign_id": {
            "type": ["null", "string"]
        },
        "content_hash": {
            "type": ["null", "string"]
        },
        "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 2048
        },
        "summary": {
            "type": ["null", "string"]
        },
        "author": {
            "type": ["null", "string"]
        },
        "extension": {
            "type": ["null", "string"]
        },
        "mime_type": {
            "type": ["null", "string"]
        },
        "source_url": {
            "type": ["null", "string"]
        },
        "dates": {
            "type": "array",
            "items": {
                "type": "string",
                "format": "date"
            },
            "uniqueItems": true
        },
        "keywords": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "uniqueItems": true
        },
        "phone_numbers": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "uniqueItems": true
        },
        "countries": {
            "type": "array",
            "items": {
                "type": "string",
                "format": "country-code"
            },
            "uniqueItems": true
        },
        "languages": {
            "type": "array",
            "items": {
                "type": "string",
                "format": "language-code"
            },
            "uniqueItems": true
        },
        "emails": {
            "type": "array",
            "items": {
                "type": "string",
                "format": "email"
            },
            "uniqueItems": true
        },
        "urls": {
            "type": "array",
            "items": {
                "type": "string",
                "format": "url"
            },
            "uniqueItems": true
        },
        "domains": {
            "type": "array",
            "items": {
                "type": "string",
                "format": "hostname"
            },
            "uniqueItems": true
        },
        "headers": {
            "type": ["null", "object"]
        }
    }
}
