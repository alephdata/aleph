{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "network.json#",
    "type": "object",
    "required": ["label", "nodes", "edges", "view"],
    "properties": {
        "label": {
            "type": "string",
            "minLength": 3,
            "maxLength": 2048
        },
        "nodes": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["gridX", "gridY", "id"],
                "properties": {
                    "gridX": {"type": ["null", "integer"]},
                    "gridY": {"type": ["null", "integer"]},
                    "id": {"type": "string"}
                },
                "additionalProperties": false
            }
        },
        "edges": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["id"],
                "properties": {
                    "id": {"type": "string"}
                },
                "additionalProperties": false
            }
        },
        "view": {
            "type": "object",
            "required": ["gridX", "gridY", "zoom"],
            "properties": {
                "gridX": {"type": ["null", "integer"]},
                "gridY": {"type": ["null", "integer"]},
                "zoom": {"type": "number"}
            },
            "additionalProperties": false
        }
    }
}
