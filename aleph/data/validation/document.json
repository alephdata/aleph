{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "document.json#",
    "type": "object",
    "oneOf": [
        {"$ref": "metadata.json#"}
    ],
    "properties": {
        "collection_id": {
            "type": "array",
            "items": {
                "type": "number"
            },
            "minItems": 1
        },
        "collection_id": {
            "type": ["null", "number"]
        },
        "type": {
            "type": "string",
            "enum": ["tabular", "text", "other"]
        },
        "id": {
            "type": "number"
        }
    },
    "required": ["collection_id"]
}
