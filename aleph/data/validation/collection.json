{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "collection.json#",
    "type": "object",
    "properties": {
        "label": {
            "type": "string",
            "minLength": 2,
            "maxLength": 255
        },
        "summary": {
            "type": ["null", "string"]
        },
        "managed": {
            "type": "boolean"
        },
        "private": {
            "type": "boolean"
        },
        "category": {
            "type": "string",
            "format": "collection-category"
        },
        "countries": {
            "type": "array",
            "items": {
                "type": "string",
                "format": "country-code"
            }
        }
    },
    "required": ["label"]
}
