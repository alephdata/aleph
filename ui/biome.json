{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "files": {
        "ignoreUnknown": false,
        "ignore": ["src/content"]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space"
    },
    "organizeImports": {
        "enabled": false
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "a11y": {
                "useMediaCaption": "off",
                "noAutofocus": "off",
                "noLabelWithoutControl": {
                    "options": {
                        "inputComponents": [
                            "HTMLSelect",
                            "InputGroup",
                            "TextArea",
                            "FileInput",
                            "NumericInput",
                            "TagInput",
                            "ClipboardInput"
                        ]
                    }
                },
                "noNoninteractiveTabindex": "off"
            },
            "complexity": {
                "noExtraBooleanCast": "off",
                "noForEach": "off",
                "noStaticOnlyClass": "off",
                "useOptionalChain": "off",
                "useLiteralKeys": "off"
            },
            "correctness": {
                "noSwitchDeclarations": "off"
            },
            "performance": {
                "noDelete": "off"
            },
            "style": {
                "noUselessElse": "off",
                "useTemplate": "off"
            },
            "suspicious": {
                "noArrayIndexKey": "off",
                "noClassAssign": "off",
                "noExplicitAny": "off",
                "noShadowRestrictedNames": "off"
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "trailingCommas": "es5"
        }
    }
}
