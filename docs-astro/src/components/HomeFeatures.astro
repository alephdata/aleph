  .HomeFeatures__grid {
    display: grid;
    width: 100%;
    gap: var(--space-xs);
    margin-block-start: var(--space);
  }

  .HomeFeatures__grid li {
    display: flex;
    align-items: center;
    color: var(--color-fg-emphasis);
  }

  .HomeFeatures__emoji {
    display: block;
    flex-grow: 0;
    flex-shrink: 0;
    margin-inline-end: var(--space);
    font-size: 2.5em;
    line-height: 1.5;
  }

  .HomeFeatures__text {
    display: block;
  }

  @media screen and (min-width: 540px) {
    .HomeFeatures__grid {
      grid-template-columns: 1fr 1fr;
      row-gap: var(--space);
      column-gap: var(--space-lg);
    }
  }

  @media screen and (min-width: 840px) {
    .HomeFeatures__grid {
      row-gap: var(--space-lg);
      grid-template-columns: 1fr 1fr 1fr;
    }
  }
</style>

